    handle /prometheus {
        uri strip_prefix /prometheus
        reverse_proxy prom:9090
    }

    handle /prometheus/* {
        uri strip_prefix /prometheus
        reverse_proxy prom:9090
    }
    encode gzip
    file_server
    tls internal

    handle_path /images/* {
        root * /app/media
        file_server
